<h1>Edit this image</h1>

<form action="/profile/images/edit/<%= pictureId %>" method="POST">
  <div class="form-group">
    <label for="exampleFormControlInput1">Title</label>

    <% userInfo.images.map((imgInfo) => { %> <% if( imgInfo._id.toString() ===
    pictureId ){ %>

    <input
      type="text"
      class="form-control"
      id="title"
      name="title"
      value="<%= imgInfo.title %>"
    />
  </div>
  <div class="form-group">
    <label for="exampleFormControlInput2">Image URL</label>
    <input
      type="text"
      class="form-control"
      id="img"
      name="img"
      value="<%= imgInfo.img %>"
    />
  </div>

  <div>
    <button type="submit" class="btn btn-dark">Update this image</button>
  </div>
  <% }}) %>
</form>
