<h1>My profile</h1>

<h4>Username: <%= userDetails.username %></h4>
<h4>Email: <%= userDetails.email %></h4>
<% if(userDetails.images.length !== 0){ %>
<h4>Images:</h4>

<% } else { %>

<h4>You haven't uploaded any images</h4>

<% } %>

<a href="/profile/edit/<%= currentUser._id%>">Edit your profile info</a>

<script>
  window.onload = function () {
    if (!window.location.hash) {
      window.location = window.location + "#loaded";
      window.location.reload();
    }
  };
</script>
