<% if(userDetails.images.length === 0){ %>

<h1>You don't have any uploaded images</h1>

<a class="btn btn-dark" href="/">Upload image!</a>

<% } else { %>

<h1>Your images</h1>
<div class="row">
  <% userDetails.images.map((imageDetails) => { %>

  <div class="card col-3 m-2" style="width: 18rem">
    <img
      class="card-img-top my-1"
      src="<%=imageDetails.img%>"
      alt="Card image article"
    />

    <div class="card-body">
      <h5 class="card-title"><%= imageDetails.title %></h5>
    </div>

    <a
      class="btn btn-secondary mb-1"
      href="/profile/images/edit/<%=imageDetails._id%>"
      >Edit image</a
    >

    <form action="/profile/images/delete/<%=imageDetails._id%>" method="POST">
      <button type="submit" class="btn btn-danger w-100 mb-1">
        Delete image
      </button>
    </form>
  </div>

  <% }) %>
</div>
<a class="btn btn-dark mt-5" href="/">Upload a new image!</a>

<% } %>
